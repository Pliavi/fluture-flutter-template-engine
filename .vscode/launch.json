  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'wdart'",
      "console": "externalTerminal",
      "cargo": {
        "args": ["build", "--bin=wdart", "--package=wdart"],
        "filter": {
          "name": "wdart",
          "kind": "bin"
        }
      },
      "args": ["--watch", "."],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'wdart'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=wdart", "--package=wdart"],
        "filter": {
          "name": "wdart",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
